<div class="container">
  <div class="row d-flex flex-column align-items-center fs-4">
    <div class="col-6 mt-5">
      <form action="" style="w-100">
        <div class="row">
          <p class="col-4">*必填欄位</p>
          <p class="col-8 p-0">請輸入你的支出</p>
        </div>
        <div class="row mt-3">
          <label for="name" class="col-4">名稱* :</label>
          <input type="text" name="name" id="name" class="col-8" required>
        </div>
        <div class="row mt-3">
          <label for="date" class="col-4">日期*:</label>
          <input type="date" name="date" id="date" class="col-8" required>
        </div>
        <div class="row mt-3">
          <label for="categoryId" class="col-4">類別*:</label>
          <input type="select" class="col-8" required>
        </div>
        <div class="row mt-3">
          <label for="amount" class="col-4">金額*:</label>
          <input type="number" name="amount" id="amount" min="0" class="col-8" required>
        </div>  
        <div class="row mt-5">
          <div class="col-8 offset-4 p-0">
            <button class="w-100" style="background-color: white;border-radius: 5px">新增支出</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>